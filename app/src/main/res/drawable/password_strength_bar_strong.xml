<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="#f3f5f6"
                android:endColor="#f3f5f6"
                android:startColor="#f3f5f6" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="#41be53"
                    android:endColor="#41be53"
                    android:startColor="#41be53" />
                <corners android:radius="4dp" />
            </shape>
        </clip>
    </item>

</layer-list>